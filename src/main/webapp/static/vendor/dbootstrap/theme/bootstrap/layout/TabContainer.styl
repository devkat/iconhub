// Common
.bootstrap .dijitTabPaneWrapper {
    border: 1px solid $grayLighter;
}

.bootstrap .dijitTabContainerBottom-tabs,
.bootstrap .dijitTabContainerTop-tabs,
.bootstrap .dijitTabContainerLeft-tabs,
.bootstrap .dijitTabContainerRight-tabs {
    border: none;
}

.bootstrap .dijitTab {
    color: $linkColor;
    text-shadow: 0 1px 0 rgba(255,255,255,.5);
    margin-right: 2px;
    padding-right: 12px;
    padding-left: 12px;
    padding-top: 8px;
    padding-bottom: 8px;
    line-height: $baseLineHeight;
    border: 1px solid transparent;
    border-radius: 4px;
}

.bootstrap .dijitTabHover {
    color: $linkColorHover;
    background-color: $grayLighter;
    border-color: $grayLighter;
}

.bootstrap .dijitTabChecked {
    color: $gray;
    background-color: $white;
    border-color: $grayLighter;
    cursor: default;
}

.bootstrap .dijitTabCloseButton {
    font-weight: bold;
    text-shadow: 0 1px 0 rgba(255,255,255,1);
    opacity: 0.2;
    margin-left: 5px;
    cursor: pointer;
}

.bootstrap .dijitTabCloseButtonHover {
    opacity: 0.5;
}

.bootstrap .dijitTabCloseButton .dijitTabCloseText {
    display: inline;
}

// Top
.bootstrap .dijitTabContainerTop-container {
    margin-top: -1px;
}

.bootstrap .dijitTabContainerTop .dijitTab {
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
}

.bootstrap .dijitTabContainerTop .dijitTabChecked {
    border-bottom-color: transparent;
}

// Bottom
.bootstrap .dijitTabContainerBottom-container {
    margin-bottom: -1px;
}

.bootstrap .dijitTabContainerBottom .dijitTab {
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
}

.bootstrap .dijitTabContainerBottom .dijitTabChecked {
    border-top-color: transparent;
}

// Tab strip buttons
.bootstrap .tabStripButtonHover {
    background-color: transparent;
    border: 1px solid transparent;
}

.bootstrap .dijitTabStripIcon:before {
    @extend .dijitIcon:before;
}

.bootstrap .dijitTabStripSlideLeftIcon:before {
    @extend .icon-chevron-left:before;
}

.bootstrap .dijitTabStripSlideRightIcon:before {
    @extend .icon-chevron-right:before;
}

.bootstrap .dijitTabStripMenuIcon:before {
    @extend .icon-chevron-down:before;
}

.bootstrap .dijitTabDisabled .dijitTabStripIcon {
    opacity: 0.65;
}

// Nested
.bootstrap .dijitTabContainerTop.dijitTabContainerNested {
    margin-top: 5px;
}

.bootstrap .dijitTabContainerTop .dijitTabPaneWrapperNested {
    border-bottom: none;
    border-right: none;
    border-left: none;
}

.bootstrap .dijitTabContainerBottom.dijitTabContainerNested {
    margin-bottom: 5px;
}

.bootstrap .dijitTabContainerBottom .dijitTabPaneWrapperNested {
    border-top: none;
    border-right: none;
    border-left: none;
}

